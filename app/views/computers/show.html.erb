<% title "Computer: " + @computer.name %>
<p>
  <b>Host:</b>
  <%=h @computer.host %>
</p>
<p>
  <b>Port:</b>
  <%=h @computer.port %>
</p>
<p>
  <b>MAC:</b>
  <%=h @computer.mac %>
</p>
<p>
  <b>Description:</b>
  <%=h @computer.description %>
</p>

<p>
  <% form_for :computer, @computer, :url => {:action => "pingorwake"} do |f| %>
    <%= f.hidden_field :id %>
    <%= f.submit "Wake"%>
    <%= f.submit "Ping" %>
    <span class="editLink"><%= link_to("Edit", :action => "edit", :id => @computer.id) %></span>
  <% end %>
</p>

