<% title "Computers" %>
<p>Your computers</p>

  <% for computer in @computers %>
    <h2><%= link_to(computer.name, :action => "show", :id => computer.id) %></h2>
    <p>
      Host: <%=h computer.host %><br />
      MAC: <%=h computer.mac %>
    </p>
    <% form_for :computer, computer, :url => {:action => "pingorwake"} do |f| %>
      <%= f.hidden_field :id %>
      <%= f.submit "Wake"%>
      <%= f.submit "Ping" %>
    <% end %>
  <% end %>