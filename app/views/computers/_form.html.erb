<% form_for @computer do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :host %><br />
    <%= f.text_field :host %>
  </p>
  <p>
    <%= f.label :port, "Port (default: 9)" %><br />
    <%= f.text_field :port %>
  </p>
  <p>
    <%= f.label :mac %><br />
    <%= f.text_field :mac %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "35x5" %>
  </p>
  <p><%= f.submit local_assigns[:button_text] ||= "Create" %></p>
<% end %>